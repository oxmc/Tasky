#!/bin/bash

#Functions
function error {
  echo -e "\e[91m$1\e[39m"
  exit 1
}

function CheckTask {
  while IFS='|' read -r Name Date _; do
      if [[ $Name || $Date ]]; then
          items+=( "$Name" "$Date" )
      else
          items+=( "None" "None" )
      fi
  done < <(sort -t'|' -k2 $DIRECTORY/Tasks/Tasks.txt)
  echo "yad --separator='\n' --title="$AppName" --list --column=Task/Reminder "${items[0]}" --column=Date "${items[1]}" --center --width='300' --height='300' --text-align="center" --text="Welcome to $AppName! \nWhat would you like to do?" --button="Add new Task/Reminder"!"${DIRECTORY}/icons/install.png"!'Create a new Task/Reminder':2 --button='Delete Task/Reminder'!"${DIRECTORY}/icons/uninstall.png"!'Delete Task/Reminder':3"
}
